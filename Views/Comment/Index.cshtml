@model IEnumerable<Comment>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    table {
        border-collapse: separate;
    }

    .tbl-container {
        max-height: fit-content;
        max-width: 90%;
    }

    .tbl-fixed {
        overflow: scroll;
        height: fit-content;
        max-height: 60vh;
        margin-top: 40px;
    }

    table th, thead {
        position: sticky;
        top: 0px;
        text-align: center;
        font-size: 18px;
        background-color: lightseagreen;
        border: 1px solid black;
    }

    table td {
        text-align: center;
    }
</style>



<div class="container tbl-container">
    <h1>
        <p class="mt-3">
            <a href="~/Comment/Create" class="btn btn-primary text-white" style="float:right;">Create One</a></p>
        COMMENTS
    </h1>
<div class="tbl-fixed">
    <table class="table table-bordered table-responsive table-sm" style="border-collapse:separate; background-color:lightblue; margin-bottom:0px;">
        <thead>
            <tr>
                <th>
                   Name
                </th>
                <th>
                    Comments
                </th>
                <th>
                    Book
                </th>
                <th>
                    Date
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @item.Name
                </td>
                <td style="width:40%; overflow-y:scroll; height:5px; max-height:fit-content;">
                    @item.Comments
                </td>
                <td>
                    @item.Book
                </td>
                <td>
                    @item.Date
                </td>
                <td>
                    <a asp-action="Edit" asp-controller="Comment" asp-route-id="@item.Id" class="btn btn-sm text-white bg-primary">Edit</a>
                    <a asp-action="Delete" asp-controller="Comment" asp-route-id="@item.Id" class="btn btn-sm text-white bg-danger">Delete</a>
                           
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>
</div>
