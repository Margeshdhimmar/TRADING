@model IEnumerable<MVC_TUTORIAL_5_12_23.Models.Book>

@{
    
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
     <style>
        table {
            border-collapse: separate;
        }

        .tbl-container {
            max-height: fit-content;
            max-width: 90%;
        }

        .tbl-fixed {
            overflow: scroll;
            height: fit-content;
            max-height: 60vh;
            margin-top: 40px;
        }

        table th, thead {
            position: sticky;
            top: 0px;
            text-align: center;
            font-size: 18px;
            background-color: lightseagreen;
            border: 1px solid black;
        }

        table td {
            text-align: center;
        }
    </style>
 
</head>
<body>

    <div class="container tbl-container">

        <h1>
            <p class="mt-3">
                <a href="~/Book/Create" class="btn btn-primary text-white" style="float:right;">Create One</a>
                @* <button type="button" class="btn btn-primary" style="float:right;">Create One</button> *@
            </p>
            BOOKS
        </h1>

        <div class="tbl-fixed">
            <table class="table table-bordered table-responsive table-sm" id="bookdatatable" style="border-collapse:separate; background-color:lightblue; margin-bottom:0px;">
                <thead>
                    <tr>
                       @*  <th>
                            @Html.DisplayNameFor(model => model.ID)
                        </th> *@
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Auth)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Price)
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                          @*   <td>
                                @item.ID
                            </td> *@
                            <td>
                                @item.Name
                            </td>
                            <td>
                                @item.Auth
                            </td>
                            <td>
                                @item.Price
                            </td>
                            <td>
                                <a href="~/Book/Onebook/@item.ID" class="btn btn-sm text-white bg-warning">DETAILS</a>|
                                <a class="btn btn-sm text-white bg-danger" asp-action="Delete" asp-controller="Book" asp-route-id="@item.ID">DELETE</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>

</html>

@section scripts{
    <script src="~/js/datatables.js"></script>
}